				pos_e = j2;
				pos_e = true;
				contador = contador + 1;
				p = true;
				system("cls");
			}
				
	/////////////////////////////////////////////////////////////////////////

	//SI EL JUGADOR INICIO EN EL MEDIO/////////////////////////////////
	
	//Si luego de iniciar en el medio, va a alguna esquina
		if(primera_jugada == 'e'){
			if(contador == 2){
				a = j2;
				pos_a = true;
				contador = contador + 1;
				p = true;
				system("cls");
			}
		
	////////////////////CASOS ESPECIALES//////////////////////////////////////////////////////////////
	

			//   |   | O    |      O |   |      |        |   | X     |      X |   |         
			//-----------   |     -----------   |     -----------    |     -----------     	
			//   | X |      |        | X |      |        | X |       |        | X |    
			//-----------   |     -----------   |     ------------   |     -----------
			// X |   |      |        |   | X    |      O |   |       |        |   | O
			//              |  					|
	
			else if(contador == 4){
			
				if((e == j1) &&(g == j1) && (c == j2)){
					a = j2;
					pos_a = true;
					contador = contador + 1;
					p = true;
					system("cls");
					}
