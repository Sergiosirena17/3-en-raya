			// X |   |      |      X |   | 
			//              | 
			if((primera_jugada == 'g') && ((b == j1) || (f == j1))){
				if(b == j1){
					d = j2;
					pos_d = true;
					contador = contador + 1;
					p = true;
					system("cls");
				}
				else if(f == j1){
					h = j2;
					pos_h = true;
