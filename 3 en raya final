				i = j2;
				pos_i = true;
				contador = contador + 1;
				p = true;
				system("cls");
			}
			//4
			else if((d == j1) && (h == j1) && (pos_g == false)){
				g = j2;
				pos_g = true;
				contador = contador + 1;
				p = true;
				system("cls");
			}
	}
	}
	
	
	//////ESTE IF SOLO SUCEDE SI NO HAY NINGUNA JUGABDA QUE BLOQUEAR O ALGUNA POSIBILIDAD DE GANAR Y JUEGA AL AZAR
	
	
			if ((jugada_m == 1) && (pos_a == false) && (p == false)) {
				a = j2;
				pos_a = true;
				contador = contador + 1;
				system("cls");					
			}
			else if ((jugada_m == 1) && (pos_a == true) && (p == false)){
				continue;
			}
					
			else if ((jugada_m == 2) && (pos_b == false) && (p == false)) {
				b = j2;
				pos_b = true;
				contador = contador + 1;
				system("cls");
			}
			else if ((jugada_m == 2) && (pos_b == true) && (p == false)){
				continue;
			}
					
					
					
			else if ((jugada_m == 3) && (pos_c == false) && (p == false)) {
				c = j2;
				pos_c = true;
				contador = contador + 1;
				system("cls");			
			}				
			else if ((jugada_m == 3) && (pos_c == true) && (p == false)){
					continue;					
			}
					
					
			else if ((jugada_m == 4) && (pos_d == false) && (p == false)) {
				d = j2;
				pos_d = true;
				contador = contador + 1;
				system("cls");
			}
			else if ((jugada_m == 4) && (pos_d == true) && (p == false)){
				continue;
			}
					
					
					
			else if ((jugada_m == 5) && (pos_e == false) && (p == false)) {
				e = j2;
				pos_e = true;
				contador = contador + 1;
				system("cls");
			}
			else if ((jugada_m == 5) && (pos_e == true) && (p == false)){
				continue;
