			//        		|  				

			if(((c == j1) && ( g == j1) && ( e == j2)) || ((a == j1) && ( i == j1) && ( e == j2))){
				
				b = j2;
				pos_b = true;
				contador = contador + 1;
				p = true;
				system("cls");
			}
			
		
				
		}
	
	}
	
	
	
	////////////////SI INICIA EN UN LATERAL//////////////////
	
	if((primera_jugada == 'b') || ( primera_jugada == 'd') || (primera_jugada == 'f') || ( primera_jugada == 'h')){
		if(contador == 2){
			e = j2;
			pos_e = true;
			contador = contador + 1;
			p = true;
			system("cls");
		}
		//////////////CASOS ESPECIALES/////////////////////////////
		
			//   | X |      |        | X |      |        |   |       |        |   |         
			//-----------   |     -----------   |     -----------    |     -----------     	
			// X | O |      |        | O | X    |        | O | X     |      X | O |    
			//-----------   |     -----------   |     ------------   |     -----------
			//   |   |      |        |   |      |        | X |       |        | X | 
			//        		|  					|				     |
			
			
		else if(contador = 4){
			//1
			if((b == j1) && (d == j1) && (pos_a == false)){
				a = j2;
				pos_a = true;
				contador = contador + 1;
				p = true;
				system("cls");
			}
			//2 
