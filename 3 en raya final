					contador = contador + 1;
					p = true;
					system("cls");
					
					}
				else if((g == j2) && (e == j1) && (c == j1)){
					i = j2;
					pos_i = true;
					contador = contador + 1;
					p = true;
					system("cls");
					
					}
				else if((i == j2) && (a == j1) && (e == j1)){
					g = j2;
					pos_g = true;
					contador = contador + 1;
					p = true;
					system("cls");
					
					}
		
				}
		}
	////////////////////CASOS ESPECIAL///////////////////////////////
	//////////////////SI INICIA EN UNA ESQUINA//////////////////////////
	
	else if((primera_jugada == 'a') || (primera_jugada == 'c') || ( primera_jugada == 'g') || (primera_jugada == 'i')){
		if(contador == 2){
			e = j2;
			pos_e = true;
			contador = contador + 1;
			p = true;
			system("cls");
		}
		if(contador == 4){
			// X |   |      |      X |   |  
			//-----------   |     -----------   
			//   | O |      |        | O | X  
			//-----------   |     -----------
			//   | X |      |        |   | 
			//              | 
			if((primera_jugada == 'a') && ((f == j1) || (h == j1))){
				if(f == j1){
					b = j2;
					pos_b = true;
					contador = contador + 1;
					p = true;
					system("cls");
				}
				else if(h == j1){
					d = j2;
					pos_d = true;
					contador = contador + 1;
					p = true;
					system("cls");
				}
			}
			//   |   | X    |        |   | X
			//-----------   |     -----------   
			// X | O |      |        | O |   
			//-----------   |     -----------
			//   |   |      |        | X | 
			//              | 
			if((primera_jugada == 'c') && ((d == j1) || (h == j1))){
				if(d == j1){
					b = j2;
					pos_b = true;
					contador = contador + 1;
					p = true;
					system("cls");
				}
				else if(h == j1){
					f = j2;
