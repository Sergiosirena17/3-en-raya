				contador = contador + 1;
				system("cls");
			}
			else if ((jugada_m == 9) && (pos_i == true) && (p == false)){
				continue;
			}				
					
					
					
					
					

			
			
				


        }
		


        
        if ((a == j1) && (b == j1) && (c == j1)) {
			cout << " " << a << " " << "|" << " " << b << " " << "|" << " " << c << " " << endl << "-----------" << endl << " " << d << " " << "|" << " " << e << " " << "|" << " " << f << " " << endl << "-----------" << endl << " " << g << " " << "|" << " " << h << " " << "|" << " " << i << " " << endl << endl;
            cout << "Gano el Jugador 1 ";
            m = true;
            break;
        }
        if ((d == j1) && (e == j1) && (f == j1)) {
			cout << " " << a << " " << "|" << " " << b << " " << "|" << " " << c << " " << endl << "-----------" << endl << " " << d << " " << "|" << " " << e << " " << "|" << " " << f << " " << endl << "-----------" << endl << " " << g << " " << "|" << " " << h << " " << "|" << " " << i << " " << endl << endl;
